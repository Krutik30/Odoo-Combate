<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_background"
    tools:context=".commonactivities.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_register_edittext_background"
            android:hint="Enter Your Name"
            android:padding="15dp"
            android:textColor="@color/register_text_color"
            android:textColorHint="@color/register_hint_color"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_register_edittext_background"
            android:hint="Enter Your Email"
            android:padding="15dp"
            android:textColor="@color/register_text_color"
            android:textColorHint="@color/register_hint_color"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/login_register_edittext_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:text="Role : "
                android:textColor="@color/register_text_color"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/userRole"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:popupBackground="#004067"/>

        </LinearLayout>



        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_register_edittext_background"
            android:hint="Enter Password"
            android:padding="15dp"
            android:textColor="@color/register_text_color"
            android:textColorHint="@color/register_hint_color"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_register_edittext_background"
            android:hint="Enter Confirm Password"
            android:padding="15dp"
            android:textColor="@color/register_text_color"
            android:textColorHint="@color/register_hint_color"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="20sp" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/white"
            android:paddingVertical="10dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Log In"
                android:textColor="#F9A825"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>